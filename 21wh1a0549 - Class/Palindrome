import java.util.*;
class Practice
{
    public static void main(String args[])
    {
        Scanner sc=new Scanner(System.in);
        String str="";
        String s=sc.nextLine();
        for(int i=s.length()-1;i>=0;i--)
        {
            str+=s.charAt(i);
        }
        System.out.println(str);
        if(str.equals(s))
        {
            System.out.println("Yes");
        }
        else
        {
            System.out.println("No");
        }
    }
}
